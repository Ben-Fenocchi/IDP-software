#include <Wire.h>
#include <Adafruit_MotorShield.h>
#include "utility/Adafruit_MS_PWMServoDriver.h"
#include "Arduino.h"
#include "Wire.h"
#include "DFRobot_VL53L0X.h"

//lets us use arrays
struct Node {
  int data;
  Node * next;
};

//initialises the list myList
Node* myList = nullptr;

//fuction to add to list
void appendToList(int value){
  Node * newNode = new Node;
  newNode->data = value;
  newNode->next = myList;
  myList = newNode; 
}

//function to remove from list
void removeFromList() {
  if (myList != nullptr) {
    Node* temp = myList;
    myList = myList->next;
    delete temp;
  }
}

/*
