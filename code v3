#include <Wire.h>
#include <Adafruit_MotorShield.h>
#include "utility/Adafruit_MS_PWMServoDriver.h"
#include "Arduino.h"
#include "Wire.h"
#include "DFRobot_VL53L0X.h"

struct Node {
  int data;
  Node * next;
};

Node* myList = nullptr;

void appendToList(int value){
  Node * newNode = new Node;
  newNode->data = value;
  newNode->next = myList;
  myList = newNode; 
}

void removeFromList() {
  if (myList != nullptr) {
    Node* temp = myList;
    myList = myList->next;
    delete temp;
  }
}

/*
